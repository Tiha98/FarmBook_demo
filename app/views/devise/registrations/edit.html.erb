<div class="w-full p-4 mx-auto text-center bg-white rounded-lg shadow-lg">
  <div class="flex flex-col items-center justify-center min-h-screen bg-white">
    <div class="w-full max-w-md p-6 bg-white rounded shadow-lg">
      <div class="mx-auto max-w-2xl text-center">
        <h3 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">Edit your account!</h3>
        <p class="mt-1 text-lg leading-8 text-gray-600">Please fill out the following form with your account's actualised data.</p>
      </div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="mb-2 text-center">
          <%= f.label :email, class: "block font-semibold leading-6 text-gray-900" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 block w-1/2 mx-auto rounded-md border-0 px-3.5 py-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
        </div>

        <div class="mb-2 text-center">
          <%= f.label :name, class: "block font-semibold leading-6 text-gray-900" %>
          <%= f.text_field :name, class: "mt-1 block w-1/2 mx-auto rounded-md border-0 px-3.5 py-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div class="mb-2 text-sm text-gray-600 text-center">
            Currently waiting confirmation for: <%= resource.unconfirmed_email %>
          </div>
        <% end %>

        <div class="mb-2 text-center">
          <%= f.label :password, class: "block font-semibold leading-6 text-gray-900" %> <i class="text-sm">(leave blank if you don't want to change it)</i>
          <%= f.password_field :password, autocomplete: "new-password", class: "mt-1 block w-1/2 mx-auto rounded-md border-0 px-3.5 py-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
        </div>

        <% if @minimum_password_length %>
          <div class="mb-2 text-sm text-gray-600 text-center">
            <em><%= @minimum_password_length %> characters minimum</em>
          </div>
        <% end %>

        <div class="mb-2 text-center">
          <%= f.label :password_confirmation, class: "block font-semibold leading-6 text-gray-900" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "mt-1 block w-1/2 mx-auto rounded-md border-0 px-3.5 py-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
        </div>

        <div class="mb-2 text-center">
          <%= f.label :current_password, class: "block font-semibold leading-6 text-gray-900" %> <i class="text-sm">(we need your current password to confirm your changes)</i>
          <%= f.password_field :current_password, autocomplete: "current-password", class: "mt-1 block w-1/2 mx-auto rounded-md border-0 px-3.5 py-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
        </div>

        <div class="mt-4 text-center">
          <%= f.submit "Update", class: "w-1/2 mx-auto bg-indigo-600 px-3.5 py-2.5 text-sm font-semibold text-white rounded-md shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
        </div>
      <% end %>

      <h5 class="text-xl font-bold text-gray-900 mt-4">Cancel my account:</h5>
      <%= button_to "Cancel my account", registration_path(resource_name), method: :delete, class: "mt-2 w-1/2 bg-slate-600 px-3.5 py-2.5 text-sm font-semibold text-black rounded-md shadow-sm hover:bg-red-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-red-600 mx-auto", data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" } %>
      <%= link_to "Back", :back, class: "mt-2 bg-white-500 hover:bg-blue-700 text-black font-bold py-2 px-4 rounded mx-auto block w-1/4" %>
    </div>
  </div>
</div>


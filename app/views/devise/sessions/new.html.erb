<div class="w-full p-4 mx-auto text-center bg-white rounded-lg shadow-lg">
  <div class="flex flex-col items-center justify-center min-h-screen bg-white">
    <div class="w-full max-w-md p-6 bg-white rounded shadow-lg mb-4"> <!-- Changed margin-bottom -->
      <div class="mx-auto max-w-2xl text-center">
        <h5 class="text-3xl mt-4 mb-2 font-bold tracking-tight text-gray-900 sm:text-4xl">Log in</h5>
      </div>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="mb-2 text-center">
          <%= f.label :email, class: "block font-semibold leading-6 text-gray-900" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 block w-1/2 mx-auto rounded-md border-0 px-3.5 py-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
        </div>

        <div class="mb-2 text-center">
          <%= f.label :password, class: "block font-semibold leading-6 text-gray-900" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "mt-1 block w-1/2 mx-auto rounded-md border-0 px-3.5 py-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="flex items-center justify-center mb-4 text-center">
            <%= f.check_box :remember_me, class: "w-4 h-4 rounded bg-gray-50 focus:ring-2 focus:ring-indigo-600 border-gray-300 mr-3" %> <!-- Increased margin right -->
            <%= f.label :remember_me, class: "text-sm font-medium text-gray-900" %>
          </div>
        <% end %>

        <div class="mt-4 text-center">
          <%= f.submit "Log in", class: "w-1/2 mx-auto bg-indigo-600 px-3.5 py-2.5 text-sm font-semibold text-white rounded-md shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
        </div>
      <% end %>

      <div class="mt-4 mb-4">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
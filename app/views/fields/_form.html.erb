<%= form_with(model: field) do |form| %>
  <% if field.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(field.errors.count, "error") %> prohibited this field from being saved:</h2>

      <ul>
        <% field.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <div class="card" style="width: 18rem;">
  <div class="card-header">
  <h5>Add your land's data:</h5>
  </div>
  <div class="card-body">
    <p class="card-text">
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
    </p>
    <p class="card-text">
    <%= form.label :location_name, style: "display: block" %>
    <%= form.text_field :location_name %>
    </p>
    <p class="card-text">
    <%= form.label :location_latitude, style: "display: block" %>
    <%= form.text_field :location_latitude %>
    </p>
    <p class="card-text">
    <%= form.label :location_longitude, style: "display: block" %>
    <%= form.text_field :location_longitude %>
    </p>
    <p class="card-text">
    <%= form.label :current_crop, style: "display: block" %>
    <%= form.text_field :current_crop %>
    </p>
    <p class="card-text">
    <%= form.label :sowing_date, style: "display: block" %>
    <%= form.date_field :sowing_date %>
    </p>
    <p class="card-text">
    <%= form.label :harvest_date, style: "display: block" %>
    <%= form.date_field :harvest_date %>
    </p>
    <p class="card-text">
    <%= form.label :size, style: "display: block" %>
    <%= form.text_field :size %>
    </p>
    <p class="card-text">
    <%= form.label :fertilizer, style: "display: block" %>
    <%= form.check_box :fertilizer %>
    </p>
    <% if field.fertilizer %>
    <p class="card-text">
    <%= form.label :fertilizer_type, style: "display: block" %>
    <%= form.text_field :fertilizer_type %>
    </p>
    <p class="card-text">
    <%= form.label :fertilizer_usage, style: "display: block" %>
    <%= form.text_area :fertilizer_usage %>
    </p>
    <% end %>
    <p class="card-text">
    <%= form.label :leased, style: "display: block" %>
    <%= form.check_box :leased %>
    </p>
    <% if field.leased %>
    <p class="card-text">
    <%= form.label :leasing_end_date, style: "display: block" %>
    <%= form.date_field :leasing_end_date %>
    </p>
    <% end %>
    <p class="card-text">
    </p>
    <p class="card-text">
       <%= form.submit  class: "btn btn-outline-success" %>
    </p>
  </div>
  </div>
<% end %>

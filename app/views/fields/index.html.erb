<h1> Your Arable Land's</h1>
<div class="container">
  <table class="table table-bordered table-hover">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Location Name</th>
        <th scope="col">Location Latitude</th>
        <th scope="col">Current Crop</th>
        <th scope="col">Sowing Date</th>
        <th scope="col">Harvest Date</th>
        <th scope="col">Size</th>
        <th scope="col">Fertilizer</th>
        <th scope="col">Fertilizer Type</th>
        <th scope="col">Fertilizer Usage</th>
        <th scope="col">Leased</th>
        <th scope="col">End of Leasing</th>
        <th scope="col">Button's</th>
      </tr>
    </thead>
    <tbody>
      <% @fields.each do |field| %>
        <tr>
          <th scope="row"><%= field.id %></th>
          <td><%= field.name %></td>
          <td><%= field.location_name %></td>
          <td><%= field.location_latitude %></td>
          <td><%= field.current_crop %></td>
          <td><%= field.sowing_date %></td>
          <td><%= field.harvest_date %></td>
          <td><%= field.size %></td>
          <td><%= field.fertilizer ? 'Yes' : 'No' %></td>
          <td><%= field.fertilizer_type %></td>
          <td><%= field.fertilizer_usage %></td>
          <td><%= field.leased ? 'Yes' : 'No' %></td>
          <td><%= field.leasing_end_date %></td>
          <td>
            <%= link_to "Show", field, class: "btn btn-outline-primary" %> 
            <%= link_to "Edit", edit_field_path(field), class: "btn btn-outline-secondary" %> 
            <%= button_to "Destroy", field, class: "btn btn-outline-danger", method: :delete %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <hr>
  <div class="d-grid gap-2">
    <%= link_to "New field", new_field_path, class: "btn btn-outline-success" %>
  </div>
